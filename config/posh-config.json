{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "shell_integration": true,
  "upgrade": {
    "source": "github",
    "auto": true,
    "notice": true,
    "interval": "24h"
  },
  "patch_pwsh_bleed": true,
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "foreground": "#1393dd",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#d2f2d7",
          "background": "#546e7a",
          "template": " {{ if .Env.VSCODE_INJECTION }} - {{ end }}{{ .Icon }}{{ if .WSL }} (WSL){{ end }} ",
          "options": {
            "macos": "",
            "windows": ""
          },
          "cache": {
            "duration": "5m",
            "strategy": "session"
          }
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "<#14b0c5,background></>",
          "invert_powerline": true,
          "foreground": "#193549",
          "background": "#18a81d",
          "background_templates": [
            "{{if le .Percentage 10 }}#ff2819{{ else if le .Percentage 25 }}#fd8c30{{ else if le .Percentage 50 }}#e6e604{{ else if le .Percentage 75 }}#91cb0a{{end}}"
          ],
          "templates": [
            "{{if le .Percentage 10 }} {{else if le .Percentage 25 }} {{ else if le .Percentage 50 }} {{ else if le .Percentage 75 }} {{ else }} {{end}} ",
            "{{ if eq \"Charging\" .State.String }}󱐋 {{end}}",
            "{{ if not .Error }}{{ .Percentage }} {{ end }}"
          ],
          "templates_logic": "join"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "<parentBackground></>",
          "foreground": "#193549",
          "background": "#3e9dea",
          "template": " {{ .Path }} ",
          "options": {
            "style": "agnoster_short",
            "hide_root_location": true,
            "max_depth": 4,
            "folder_separator_icon": "/",
            "folder_icon": "...",
            "mapped_locations": {
              "/mnt/c": "C:/",
              "re:(.*/github)": ""
            }
          },
          "cache": {
            "duration": "1h",
            "strategy": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#193549",
          "background": "#ffeb3b",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}",
          "options": {
            "status_formats": {
              "Modified": " ±%d"
            },
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "untracked_modes": {
              "/Users/user/Projects/oh-my-posh/": "no"
            }
          },
          "cache": {
            "duration": "20s",
            "strategy": "folder"
          }
        }
      ]
    }
  ]
}